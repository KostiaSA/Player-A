<?xml version='1.0' encoding='utf-8'?>
<widget id="edem.tv.player" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Edem Player</name>
    <description>
        Плейер Edem TV для Xiaomi Mi Box
    </description>
    <author email="info@buhta.ru" href="http://buhta.ru">
        ООО БУХта
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <access origin="*" />
    <icon src="res/icon.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <plugin name="cordova-plugin-screensize" spec="^1.3.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
</widget>
